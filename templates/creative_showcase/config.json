  "fields": {
    "hero": {
      "type": "object",
      "label": "Hero Section",
      "fields": {
        "name": {
          "type": "text",
          "label": "Name",
          "default": "Sarah Creative"
        },
        "title": {
          "type": "text",
          "label": "Title",
