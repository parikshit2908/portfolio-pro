          "default": ""
        },
        "description": {
          "type": "textarea",
          "label": "Description",
          "default": "Project description"
        }
      }
    },
    "contact": {
      "type": "object",
      "label": "Contact",
      "fields": {
        "email": {
          "type": "text",
          "label": "Email",
          "default": "hello@sarahcreative.com"
